{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Project",
            "type": "shell",
            "command": "",
            "args": [
                "make",
                "--directory=${workspaceFolder}/debug",
                "&&",
                "make",
                "--directory=${workspaceFolder}/release",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        }
    ]
}